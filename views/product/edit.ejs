<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs') %>
  </head>

  <body>
    <h2>Edit Product</h2>
    <form action="/products/<%=product._id%>?_method=PUT" method="POST">
      Name: <input type="text" name="name" value="<%=product.name%>" /><br />
      Description: <input type="text" name="description" value="<%=product.description%>" /><br />
      ImageURL: <input type="text" name="img" value="<%=product.img%>" /><br />
      Price: <input type="number" step="0.01" min="0" name="price" value="<%=product.price%>" /><br />
      Quantity: <input type="number" name="qty" min="0" value="<%=product.qty%>"/><br />
      <br />
      <input type="submit" value="SUBMIT CHANGES" />
    </form>
    <input type="button" value="CANCEL" onclick="window.location.href='/inventory'"/>
  </body>
</html>